#pragma once

class esfera
{
private:
	float r;

public:
	esfera(void);
	~esfera(void);
	float areaesfera();

};


#include "StdAfx.h"
#include "esfera.h"
#include <conio.h>


esfera::esfera(void)
{
 r=5;
}


esfera::~esfera(void)
{
}

float esfera::areaesfera()
{
	float area;

	area=4*3.14*r*r;
	return area;
}	

#include "stdafx.h"
